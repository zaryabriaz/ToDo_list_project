<h1 class="text-center "> ToDo List </h1>
<%= link_to 'Add New Task',new_to_do_path ,class: 'btn btn-primary btn-block float-right'%>
<table class="table table-hover table-dark" >
  <tr>
    <th>Task</th>
    <th>Status</th>
    <th>Due Date</th>

  </tr>
  <% @todos.each do |todo| %>

<tr>
  <td><%= todo.task %></td>
  <td><%= todo.status %></td>
  <td><%= todo.due_date %></td>
  <td><%= link_to 'edit',edit_to_do_path(todo.id),class: 'btn btn-primary ' %></td>
  <td><%= link_to 'Remove',to_do_path(todo.id),class: 'btn btn-primary ',method: :delete,data: {confirm:"Are you Sure to delete"}%></td>


</tr>
  <% end %>

</table>
